[flake8]
select = B,B9,C,D,DAR,E,F,N,RST,S,W
ignore = E203,E501,RST201,RST203,RST301,W503,D301,B950
max-line-length = 80
max-complexity = 10
docstring-convention = google
per-file-ignores =
    tests/*:D104,S603,S404
    tests/**/*:S101,D103,D415,D100,D104,S603,S404
rst-roles = class,const,func,meth,mod,ref
rst-directives = deprecated
